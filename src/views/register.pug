extends layout.pug

block content
  if error != undefined
    div(class='w-100 flex justify-center bg-red-600 text-white mb-2' )
      case error
        when ''
          p wystąpił błąd
        when 'NameTaken'
          p nazwa użytkownika jest już zajęta
        when 'InvalidName'
          p nazwa użytkownika musi mieć od 3 do 16 znaków
        when 'InvalidPassword'
          p hasło musi mieć conajmniej 8 znaków

  form(class='flex flex-col items-center gap-2' method='post' action='/register')
    div
      label(class='flex gap-2 mb-2') nazwa:
        input(class='ml-auto' type='text' name='username' minlength='3' maxlength='16' required=true)
      label(class='flex gap-2') hasło:
        input(class='ml-auto' type='password' name='password' minlength='8' required=true)
    input(type='submit' value='zarejestruj')
